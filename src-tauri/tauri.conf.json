{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "soa",
  "version": "1.0.0-alpha",
  "identifier": "SoA",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "licenseFile": "../LICENSE",
    "license": "GPL-3.0",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
