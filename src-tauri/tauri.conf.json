{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "soa",
  "version": "0.1.0",
  "identifier": "com.j4ckacc.soa",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "soa",
        "width": 1250,
        "height": 800,
        "transparent": true,
        "windowEffects": {
          "effects": ["titlebar"]
        }
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$MUSIC/**",
          "$HOME/**",
          "$DESKTOP/**",
          "$DOCUMENT/**",
          "$APPDATA/**"
        ]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.ico"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "licenseFile": "../LICENSE",
    "license": "MIT",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
